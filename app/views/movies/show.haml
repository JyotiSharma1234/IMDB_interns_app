.container
  %br/
  .jumbotron
    %h1= @movie.name
    %p
      %b> Rating
      \: #{@movie.rating}
    %p
      %b> Release Date
      \: #{@movie.release_date}
    %p
      %b> Description
      \: #{@movie.description}
    %p= link_to 'Delete', movie_path(@movie), |
        method: :delete,                    |
        data: { confirm: 'Are you sure?' }, |
        class: 'btn btn-danger'             |
    %p= link_to 'Edit', edit_movie_path(@movie), class: 'btn btn-warning'
    %h4 Actors
    = form_for @movie do |form|
      %p
        %select{ :name => "select_actor" }
          - @actors.each do |actor|
            %option{:value => actor.id}= actor.name
      %p
        =form.submit "Update"
    %table.table
      - @movie.actors.each do |cast|
        %tr
          %td= cast['name']
    %hr/
    = link_to 'Home', movies_path, class: 'btn btn-primary'
